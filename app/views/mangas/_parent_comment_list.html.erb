<li id="parent_comment_chapter_id_<%= reply.id %>">
<div class="d-flex mt-4">
  <div class="flex-shrink-0"><img class="rounded-circle" src="https://dummyimage.com/50x50/ced4da/6c757d.jpg" alt="..." /></div>
  <div class="card" style="min-width: 36.7em;max-width: 36.7em;">
    <div class="card-body">
      <div class="ms-3">
        <div class="fw-bold"><%= reply.user.username %></div>
        <%= reply.message  %>
        <button class="badge badge-primary float-right" id="rep_button2_<%= reply.id %>" data-toggle="#parent_form_<%= reply.id %>" onclick="toggleContent(event)">Reply</button><br>
        <div id="parent_form_<%= reply.id %>" class='hidden'>
          <%= form_for [@comment.manga, @comment], remote: true do |fff|%>
            <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
            <%= fff.text_area :message, class:"form-control comment-input"%><br>
            <%= fff.hidden_field :parent_id, value: @comment.id %>
            <%= fff.hidden_field :sub_parent_id, value: reply.id %>
            <%= fff.submit 'POST', class: 'btn btn-primary btn-sm float-right comment-btn' %>
          <% end %>
        </div>
        <br>
      </div>
    </div>
  </div>
</div>
</li>