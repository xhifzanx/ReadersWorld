</div>
</div>
  </section>
  <div class="album py-5 bg-light">
    <div class="container">
      <div class="row">
    <% Manga.all.each_slice(2) do |mangas| %>
      <% mangas.each do |manga| %>
          <% next if manga.users.where(email: current_user.email).blank? %>
          <div class="col-md-6">
            <%= link_to manga_path(manga) do %>
            <div class="card-body">
              <div class="card mb-4 shadow-sm">
                <div class="row">
                  <div class="col-md-4">
                    <% if manga.thumbnail.present? %>
                      <%= image_tag manga.thumbnail, width:"100px" %>
                    <% end %>
                  </div>
                  <div class="col-md-8">
                    <br>
                    <p class="card-text"><%= manga.title %></p>
                    <% if manga.chapters.count >= 1 %>
                    <p class="card-text">
                        <%= link_to manga.chapters.last.title, manga_chapter_path(manga, manga.chapters.last) %>
                      </p>
                    <p class="card-text"><%= manga.chapters.last.updated_at %></p>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
            <% end %>
          </div>
        <% end %>
      <% end %>
        </div>
      

       
      </div>
    </div>


